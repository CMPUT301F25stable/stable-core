<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp">

        <!-- CARD 1: Event Details (Title -> Geo) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/titleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:hint="Enter your title here"
                    android:inputType="text"
                    android:minHeight="0dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Description"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:hint="Enter your description here"
                    android:inputType="text"
                    android:minHeight="0dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <!-- Filter Tags -->
                <TextView
                    android:id="@+id/filterTagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Filter Tag(s)"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/filterTagInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:hint="e.g. sports, music, charity"
                    android:inputType="text"
                    android:minHeight="0dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <!-- Location -->
                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Location"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/locationInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:hint="Enter your location here"
                    android:inputType="text"
                    android:minHeight="0dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <!-- Waitlist Max -->
                <TextView
                    android:id="@+id/waitlistMaxText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Waitlist Max"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/waitlistMaxInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:hint="Leave empty for no limit"
                    android:inputType="number"
                    android:minHeight="0dp"
                    android:paddingTop="4dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Start Date -->
                <TextView
                    android:id="@+id/startDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Start Date"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/startDateInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:focusable="false"
                    android:hint="YYYY-MM-DD"
                    android:inputType="date"
                    android:minHeight="0dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- End Date -->
                <TextView
                    android:id="@+id/endDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="End Date"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/endDateInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:focusable="false"
                    android:hint="YYYY-MM-DD"
                    android:inputType="date"
                    android:minHeight="0dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Geolocation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Switch
                        android:id="@+id/geolocationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geolocation"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD 2: Poster / Image Upload -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Initial upload section (hidden for existing, visible for new) -->
                <LinearLayout
                    android:id="@+id/initialUploadSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/select_image_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Image"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/LightGrey" />

                        <Button
                            android:id="@+id/upload_image_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Image"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/LightGrey"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/upload_img_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:progress="0"
                        android:max="100"
                        android:visibility="gone"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                    <ImageView
                        android:id="@+id/preview_select_img_view"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:outlineProvider="background" />
                </LinearLayout>

                <!-- Poster title -->
                <TextView
                    android:id="@+id/posterSectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Event Poster"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <!-- Poster preview -->
                <ImageView
                    android:id="@+id/eventPosterPreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_mask"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:contentDescription="Event poster preview" />

                <!-- Poster buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/changePosterButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Poster"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/removePosterButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remove Poster"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@android:color/holo_red_light" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD 3: Lottery -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/lotterySectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lottery Drawing"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:id="@+id/lotteryInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/waitlistInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current waitlist: 0 entrants"
                        android:textSize="14sp"
                        android:paddingBottom="8dp" />

                    <EditText
                        android:id="@+id/lotterySizeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of entrants to select"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/runLotteryButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Run Lottery"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lotteryStatusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/lotteryResultText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lottery result"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
