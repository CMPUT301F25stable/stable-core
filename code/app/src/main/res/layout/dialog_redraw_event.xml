<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/redrawDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redraw Replacement Entrants"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Info Text -->
    <TextView
        android:id="@+id/redrawInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select how many replacement entrants to draw from the waitlist."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="20dp" />

    <!-- Waitlist Count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available on Waitlist: "
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/waitlistCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Number Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number to Draw: "
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/numberOfEntrantsInput"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#666666"
            android:background="@color/white"
            android:padding="8dp"
            android:gravity="center"
            android:maxLength="3" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancelRedrawButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/confirmRedrawButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Draw"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>