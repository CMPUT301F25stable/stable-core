<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".view.OrganizerPanel">

    <!-- Top Title Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Organizer Panel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="#252525"
            android:gravity="center"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/eventListFragment"
        android:name="com.example.eventlottery.view.EventlistFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/titleCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5" />

    <!-- Control Section -->
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:background="#252525"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentContainerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/createEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/view_finalized_list_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Accepted List"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:backgroundTint="#FFFFFF"
                android:elevation="4dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:stateListAnimator="@null"
                android:text="Map"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/editEventButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/viewWaitlistButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Waitlist"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/redrawEventButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Redraw"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:stateListAnimator="@null" />
        </LinearLayout>

        <!-- Chosen and Cancelled Entrants Buttons Side by Side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/viewChosenEntrantsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Chosen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="3dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/viewCancelledEntrantsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Cancelled"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="3dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/downloadQRCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="QR Code"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="3dp"
                android:stateListAnimator="@null" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Taskbar -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.eventlottery.view.TaskbarFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_home_taskbar" />

</androidx.constraintlayout.widget.ConstraintLayout>