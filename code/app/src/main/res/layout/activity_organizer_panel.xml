<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".view.OrganizerPanel">

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search Events"
        android:textColor="#000000"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fragment Container - Now displays either EventlistFragment or OrganizerEventInfoFragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/eventListFragment"
        android:name="com.example.eventlottery.view.EventlistFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar" />

    <!-- Control Section -->
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:background="#252525"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Switch
            android:id="@+id/viewRegistrantsSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Registrants"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:paddingVertical="8dp"
            android:theme="@style/CustomSwitch" />

        <Switch
            android:id="@+id/exportListSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export List"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:paddingVertical="8dp"
            android:theme="@style/CustomSwitch" />

        <Button
            android:id="@+id/downloadQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download QR Code"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <!-- Top Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/createEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/view_finalized_list_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="View Final List"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:backgroundTint="#FFFFFF"
                android:elevation="4dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:stateListAnimator="@null"
                android:text="Map"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/editEventButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/viewWaitlistButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Waitlist"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/deleteEventButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="#3A3A3A"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:stateListAnimator="@null" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>